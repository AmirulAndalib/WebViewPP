<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/advance_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/advance_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStart="8dp"
            app:contentInsetEnd="8dp"
            style="@style/ThemeComponentToolbar">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/advance_toolbar_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_round_arrow_back_24"
                    app:tint="@color/textPrimary"
                    android:contentDescription="@string/back" />
                <TextView
                    android:id="@+id/advance_toolbar_name"
                    style="@style/ThemeComponentTextViewPrimary"
                    android:textSize="18sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/advance"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/advance_toolbar_back"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/advance_appbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/advance_wankkoree_card"
                style="@style/ThemeComponentCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:backgroundTint="#77c59c6b"
                android:outlineSpotShadowColor="#77c59c6b"
                android:backgroundTintMode="src_over">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp">
                    <ImageView
                        android:id="@+id/advance_wankkoree_icon"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:contentDescription="@string/wankko_ree"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:srcCompat="@mipmap/wankkoree" />
                    <TextView
                        style="@style/ThemeComponentTextViewPrimary"
                        android:textSize="16sp"
                        android:id="@+id/advance_wankkoree_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/wankko_ree"
                        app:layout_constraintBottom_toTopOf="@id/advance_wankkoree_desc"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/advance_wankkoree_icon"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        style="@style/ThemeComponentTextViewSecondary"
                        android:textSize="12sp"
                        android:id="@+id/advance_wankkoree_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/author_of_this_module"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/advance_wankkoree_icon"
                        app:layout_constraintTop_toBottomOf="@id/advance_wankkoree_text" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/advance_yuki_card"
                style="@style/ThemeComponentCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:backgroundTint="#77F4AF6A"
                android:outlineSpotShadowColor="#77F4AF6A"
                android:backgroundTintMode="src_over">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp">
                    <ImageView
                        android:id="@+id/advance_yuki_icon"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:srcCompat="@mipmap/yuki_hook_api"
                        android:contentDescription="@string/yuki_hook_api" />
                    <TextView
                        style="@style/ThemeComponentTextViewPrimary"
                        android:textSize="16sp"
                        android:id="@+id/advance_yuki_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/yuki_hook_api"
                        app:layout_constraintBottom_toTopOf="@id/advance_yuki_desc"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/advance_yuki_icon"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        style="@style/ThemeComponentTextViewSecondary"
                        android:textSize="12sp"
                        android:id="@+id/advance_yuki_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/this_module_is_constructed_using_yukihookapi"
                        app:layout_constraintBottom_toTopOf="@id/advance_yuki_version"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/advance_yuki_icon"
                        app:layout_constraintTop_toBottomOf="@id/advance_yuki_text" />
                    <TextView
                        style="@style/ThemeComponentTextViewSecondary"
                        android:textSize="12sp"
                        android:id="@+id/advance_yuki_version"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/advance_yuki_version_text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/advance_yuki_icon"
                        app:layout_constraintTop_toBottomOf="@id/advance_yuki_desc" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/advance_about_card"
                style="@style/ThemeComponentCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp">
                    <ImageView
                        android:id="@+id/advance_about_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_round_info_24"
                        app:tint="@color/textPrimary"
                        android:contentDescription="@string/about" />
                    <TextView
                        style="@style/ThemeComponentTextViewPrimary"
                        android:textSize="16sp"
                        android:id="@+id/advance_about_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/app_name"
                        app:layout_constraintBottom_toTopOf="@id/advance_about_desc"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/advance_about_icon"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        style="@style/ThemeComponentTextViewSecondary"
                        android:textSize="12sp"
                        android:id="@+id/advance_about_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/app_description"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/advance_about_icon"
                        app:layout_constraintTop_toBottomOf="@id/advance_about_text" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>